.navbar
  padding: 0 1rem
  z-index: 8
  top: 0
  position: relative
  --bg: unquote('linear-gradient(%s, transparent)' % var(--site-bg))
  &:after
    position: absolute
    content: ''
    pointer-events: none
    top: 0
    bottom: 0
    left: 0
    right: 0
    --blur-px: 8px
    --blur-sat: 300%
    background: var(--bg)
    backdrop-filter: saturate(var(--blur-sat)) blur(var(--blur-px))
    mask: linear-gradient(var(--site-bg), transparent)
    trans1 all
  if hexo-config('style.site') && hexo-config('style.site.background-image')
    position inherit
    background: none
  else 
    position: sticky
    position: -webkit-sticky
    margin-bottom: 1px
    margin-top: -8px

.navbar nav
  display: inline-flex
  overflow: scroll visible
  scrollbar(0, 0)
  font-size: $fs-14
  position: relative
  &:before
    position: absolute
    content: ''
    --insetX: .5rem
    --insetY: .7rem
    left: var(--insetX)
    right: var(--insetX)
    top: var(--insetY)
    bottom: var(--insetY)
    background: var(--alpha50)
    filter: blur(4px)
    border-radius: 64px
  >p
    margin: 0
  a
    padding: 2px 0.75rem
    if hexo-config('style.site') && hexo-config('style.site.background-image')
      margin: 10px 0.25rem 8px 0
    else
      margin: 10px 0.25rem 8px 0.25rem
    line-height: 2
    color: var(--text-p1)
    border-radius: 32px
    font-weight: 500
    white-space: nowrap
    position: relative
    z-index: 1
    trans1 all
    &:hover
      background: var(--alpha100)
    &.active, &:hover
      color: var(--text)
    &.active
      background: var(--alpha50)
      box-shadow: $boxshadow-button
      cursor default
      pointer-events: none
      backdrop-filter: saturate(300%) blur(8px)
    &.active:after
      content: ''
  a+a
    margin-left: 4px

@media screen and (max-width: $device-mobile-max)
  .navbar.top
    margin-top: 0
    padding-left: 0
    padding-right: 0
    nav
      a:first-child
        margin-left: 1rem
      a:last-child
        margin-right: 1rem
